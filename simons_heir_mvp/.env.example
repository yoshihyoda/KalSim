# Simons' Heir MVP - Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# HuggingFace Configuration (for SocioVerse)
# ============================================

# Your HuggingFace API token for accessing the SocioVerse dataset
# Get yours at: https://huggingface.co/settings/tokens
# 
# IMPORTANT: You must first accept the dataset terms at:
# https://huggingface.co/datasets/Lishi0905/SocioVerse
#
# Leave empty to skip SocioVerse and use Kalshi-generated personas instead
HF_TOKEN=

# ============================================
# Ollama Configuration (for LLM inference)
# ============================================

# The Ollama model to use (default: nemotron-3-nano)
# Make sure to run: ollama pull nemotron-3-nano
OLLAMA_MODEL=nemotron-3-nano

# Ollama server host and port
OLLAMA_HOST=localhost
OLLAMA_PORT=11434

# ============================================
# Simulation Defaults
# ============================================

# Default number of agents (can be overridden via API)
AGENTS_COUNT=100

# Default simulation duration in days
SIMULATION_DAYS=7
